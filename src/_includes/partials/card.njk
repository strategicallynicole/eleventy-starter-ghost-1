

{% macro card(post) %}



<div class="column neucardcontainer">


    <a class="post-card{% if post.featured %}  post-card-featured{% endif %}" href="{{ post.url }}">
{% if post.feature_image %}

<figure class="neucardimage" style="background-image: url({{ post.feature_image }});">
							<img class="neucardimage" src="{{ post.feature_image }}" alt="{{ post.title }}">
								</figure>
            {% endif %}

            <header class="post-card-header">
            <h2 class="post-card-title white">
                

                {{ post.title }}
            </h2>

             <span class="fancy-box-tags-container"><i class="fad cardi fa-tags"></i>{% if post.tags %}{% for tag in post.tags %}{{ tag.name }} {% endfor %}{% endif %}
                            	<span class="fancy-box-time-container"><i class="fad fa-clock"></i>{{ post.html | safe | getReadingTime }} min read</span></span>

        </header>
<div class="fancybody">
<div class="post-card-excerpt">
            <p class="fancy">{{ post.excerpt }}</p>
        </div>
        	<div class="fancy-box-footer text-center pb-30"><a href="{{ post.url }}" class="neubutton altyborder no-underline smallerbtn">
												<span class="">
													<span class="btn-txt purple no-underline">&nbsp; Read on &nbsp; &nbsp; <i class="fas fa-arrow-circle-right"></i></span>
												</span>
											</a>
										
										</div></div>

        <footer class="post-card-footer white">

            <div class="post-card-footer-left">
   

            </div>
            <div class="white post-card-footer-right">
            </div>
        </footer>
    </a>

    </div>
{% endmacro %}
